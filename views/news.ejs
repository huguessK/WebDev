  <%if( numberResults>1){%>
  <p> Page <span style="color: blue"><%=pageId%></span> /<%=numberResults-1%></p>
  <a id="Previous" href="/news/0">Previous</a>
  <%for(let i=1; i<numberResults; i++){%>
  <a class="page" href=<%="/news/"+i%>><%=i%></a>
  <%}%>
    <a class="Next" href="/news/N">Next</a>
  <%}%>

  <%if( numberResults===1){%>
  <p> Page <span style="color: blue">1</span>/1</p>
  <a class="page" href="/news/1">1</a>
  <%}%>

<%}}%>
</div>










<%- include("partials/header"); -%>

  <h3><center>Welcome to your search engine</center></h3>
  <p><center>Please type your subject in the search bar then hit</center></p>
  <p><center>the enter key on your keyboard or click on the search button.</center></p>


<form class="d-flex search-bar" role="seach" action="/news" method="post">
        <input class="form-control me-2" type="text" name="searchText" placeholder="Search" aria-label="Search">
          <div class="searchbutton">
            <button class="" type="submit" name="searchButton">Search</button>
            </div>

</form>


<%for(let i=0; i<data.length; i++){%>
      <h3><center><%=data[i][1]%></center></h3>
      <a href=<%="/news-content/"+i%>><center>Read More</center></a>
      <div class="image-news">
        <img src=<%=data[i][0]%>  alt="news picture">
      </div>
<%}%>


<%- include("partials/footer"); -%>
